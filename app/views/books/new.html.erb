<h1 align="center">Dodaj książkę</h1>
<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@book, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <label>Tytuł</label>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "Tytuł", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <label>Autor</label>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :author, class: "form-control", placeholder: "Autor", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <label>Gatunek</label>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :genre, class: "form-control", placeholder: "Gatunek", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit "Dodaj", class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
            <% end %>
    </div>
</div>