<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<p></p>

<div class="container">
	<div class="row">

		<section class="content">
			<div class="col-md-8 col-md-offset-2">
				<div class="panel panel-default">
					<div class="panel-body">

						<div class="table-container">
							<table class="table table-filter">
								<tbody>
								
								
									<tr >
										<td>
											<div class="media">
												<a href="#" class="pull-left">
													<img src="https://www.bookd.online/assets/app/images/icon/user-icon.png" class="media-photo">
												</a>
												<div class="media-body">
													<h4 class="title">
														Opinie użytkownika <%= @user.username %>
													</h4>
													<p class="summary">
													<% if logged_in? && current_user.admin? %>
    <div><%= link_to "Usuń użytkownika", user_path(@user.id), method: :delete, class: "btn btn-xs btn-danger", id: 'delete' %></div>
<% end %>

													</p>
												</div>
											</div>
										</td>
									</tr>
									
									<% @user.opinions.each do |opinion| %>
									<tr >
										<td>
											<div class="media">
												<a href="#" class="pull-left">
													<img src="https://cdn.ning.com/wp-content/themes/ningblog/assets/img/ui/blog/icons/review-icon.png" class="media-photo">
												</a>
												<div class="media-body">
													
													<p class="summary">
													
													 <div><%= link_to "#{opinion.book.title}", book_path(opinion.book.id) %></div>
    <div><%= opinion.rate %>/10</div>
    <div><%= opinion.description %></div>
													
													</p>
												</div>
											</div>
										</td>
									</tr>
									
									<% end %>
									
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</section>
		
	</div>
</div>

